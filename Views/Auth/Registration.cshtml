@model NewUserDto

<p class="fs-4">Регистрация</p>
<hr />

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        <span>@ViewBag.ErrorMessage</span>
    </div>
}

<p>
    Если у Вас уже есть аккаунт, Вы можете 
    <a asp-controller="Auth" asp-action="Authorization">авторизоваться</a>.
</p>
<hr />

<form asp-controller="Auth" asp-action="SignUp" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">Имя:</label>
        <input class="form-control" asp-for="FirstName" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Фамилия (необязательно):</label>
        <input class="form-control" asp-for="LastName" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email">Адрес электронной почты:</label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Password">Пароль:</label>
        <input class="form-control" asp-for="Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ConfirmPassword">Подтверждение пароля:</label>
        <input class="form-control" asp-for="ConfirmPassword" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Зарегистрироваться</button>
    </div>
</form>